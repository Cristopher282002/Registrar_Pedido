@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diego's Pizza</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .header {
            background-color: #282321;
            color: #fff;
            padding: 2rem 0;
            text-align: center;
            border-radius: 10px;
            box-shadow: 4px 4px 10px 0px black;
        }

        .title {
            font-size: 3rem;
            font-weight: bold;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            font-size: 1.5rem;
            font-style: italic;
            margin-top: 1rem;
        }

        .btn-order {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #212529;
            font-weight: bold;
            border-radius: 30px;
            padding: 10px 20px;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

            .btn-order:hover {
                background-color: #ffca2c;
                border-color: #ffca2c;
                color: #212529;
            }

        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/imagenes/fondo.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            z-index: -1;
            filter: blur(5px);
        }
    </style>
</head>
<body>
    <div class="background-container"></div>
    <header class="header">
        <div class="container">
            <h1 class="title">Diego's Pizza</h1>
            <p class="subtitle">¡Deliciosas pizzas hechas con amor!</p>
        </div>
    </header>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+pwkHc8LGdeA0IbdEiskF4fF2XjpSUEs4tK" crossorigin="anonymous"></script>
</body>
</html>
